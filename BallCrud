
CREATE TABLE ‘tableballs’ (
‘id’ INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
‘name’ VARCHAR(50) NOT NULL,
‘manufacturer_id’ INT NOT NULL,
‘data_filepath’ VARCHAR(50) NOT NULL,
‘core_symmetric’ BOOL NOT NULL,
‘differential’ FLOAT NOT NULL,
‘color’ VARCHAR(50) NOT NULL,
‘color_stock ENUM() NOT NULL,
‘notes’ TEXT ,
);

require_once(‘preheader.php’);

include (ballsCrud.class.php’);

$tblballs= new ballsCrud (“Ball”, “tableballs”, “ballsID”);

$tblballs->displayAs(“id”, “BALL ID”);
$tblballs->displayAs(“name”, “Name”);
$tblballs->displayAs(“manufacturer_id”, “Maker”);
$tblballs->displayAs(“color”, “Ball color”);
$tblballs->displayAs(“notes”, “Info”);
